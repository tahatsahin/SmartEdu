version: "3.9"

services:
  app:
    image: "my-node-app:latest"
    build: .
    container_name: my-node-app
    restart: always
    env_file: 
      - .env
    depends_on:
      - mongo
    ports:
      - "80:3000"

  mongo:
    image: mongo:7
    container_name: my-mongo
    restart: always
    environment:
      MONGO_INITDB_ROOT_USERNAME: "{{ mongo_root_user }}"
      MONGO_INITDB_ROOT_PASSWORD: "{{ mongo_root_password }}"
      MONGO_INITDB_DATABASE: "{{ mongo_db_name }}"
    volumes:
      - mongo-data:/data/db

volumes:
  mongo-data:
